{
    "compilerOptions": {
      "target": "ES6",
      "lib": [
        "ES2017",
        "DOM"
      ],
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": [
        "node_modules/@types", 
        "node_modules/@arcgis/core", 
      ]
    },
    "include": [
      "./src/js/*.ts",
      "./src/js/**/*.ts",
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
  }